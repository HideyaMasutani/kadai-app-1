<h2>Editing Book</h2>
<!-- form_with部分 -->
<%= form_with model: @book, local:true do |f| %>

  <% if @book.errors.any? %>
    <h3>入力した内容にerrorが<%= @book.errors.count %>件あります</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>

  <%= f.text_area :body %>

  <p>
    <%= f.submit 'Update Book' %>
  </p>

<%= link_to "Show", book_path(@book.id) %>
|
<%= link_to "Back", books_path %>

<% end %>
