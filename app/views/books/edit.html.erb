<h2>Editing Book</h2>
<!-- form_with部分 -->
<%= form_with model: @book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>

  <%= f.text_area :body %>

  <p>
    <%= f.submit 'Updata Book' %>
  </p>

<%= link_to "Show", book_path(@book.id) %>
|
<%= link_to "Back", books_path %>

<% end %>
